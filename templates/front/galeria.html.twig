{% extends 'base.html.twig' %}

{% block title %}Juan Bisquert | Peluqueria{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row fila-galeria-peluqueria">
            <div class="col-6 mt-4 mb-4 mx-5">
                <h1>Peluquería</h1>
                <div class="container-fluid slideshow-container">

                    <!-- Full-width images with number and caption text -->


                    <div class="mySlides">
                        <img src="img/peluqueria3.jpg" style="width:100%; height: 450px">
                    </div>

                    <div class="mySlides">
                        <img src="img/servicios-11.jpg" style="width:100%; height: 450px">
                    </div>

                    <div class="mySlides">
                        <img src="img/servicios-3.jpg" style="width:100%; height: 450px">
                    </div>
                    <div class="mySlides">
                        <img src="img/servicios-10.jpg" style="width:100%; height: 450px">
                    </div>
                    <div class="mySlides">
                        <img src="img/servicios-9.jpg" style="width:100%; height: 450px">
                    </div>
                    <div class="mySlides">
                        <img src="img/servicios-5.jpg" style="width:100%; height: 450px">
                    </div>
                    <div class="mySlides">
                        <img src="img/servicios-6.jpg" style="width:100%; height: 450px">
                    </div>


                    <!-- Next and previous buttons -->
                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>
                </div>
            </div>
            <div class="col-4 col-servicios-imagenes mt-5 ml-5">
                <div class="row">
                    <div class="col-6 mt-4">
                        <img src="img/servicios-5.jpg" style="width:100%; height: 100%">

                    </div>
                    <div class="col-6 mt-4">
                        <img src="img/servicios-6.jpg" style="width:100%; height: 100%">

                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mt-4">
                        <img src="img/servicios-7.jpg" style="width:100%; height: 100%">

                    </div>
                    <div class="col-6 mt-4">
                        <img src="img/servicios-8.jpg" style="width:100%; height: 100%">

                    </div>
                </div>
            </div>
            <hr>
        </div>
        <div class="row fila-tratamientos-galeria">
            <div class="col-12">
                <h1>Manicura</h1>
                <div class="container">
                    <div class="gallery-container w-3 h-2">
                        <div class="gallery-item">
                            <div class="image">
                                <img src="img/manicura-1.jpg" alt="manicura-1">
                            </div>
                            <div class="text">Colores divertidos</div>
                        </div>
                    </div>

                    <div class="gallery-container w-3 h-3">
                        <div class="gallery-item">
                            <div class="image">
                                <img src="img/manicura-2.jpg" alt="manicura-2">
                            </div>
                            <div class="text">Acabados de calidad</div>
                        </div>
                    </div>

                    <div class="gallery-container h-3">
                        <div class="gallery-item">
                            <div class="image">
                                <img src="img/manicura-5.jpg" alt="manicura-3">
                            </div>
                            <div class="text">Tendencia</div>
                        </div>
                    </div>

                    <div class="gallery-container w-2">
                        <div class="gallery-item">
                            <div class="image">
                                <img src="img/manicura-6.jpg" alt="manicura-5">
                            </div>
                            <div class="text">Cuidado</div>
                        </div>
                    </div>

                    <div class="gallery-container w-4 h-2">
                        <div class="gallery-item">
                            <div class="image">
                                <img src="img/manicura-7.jpg" alt="manicura-6">
                            </div>
                            <div class="text">Atención personalizada</div>
                        </div>
                    </div>

                    <div class="gallery-container h-2">
                        <div class="gallery-item">
                            <div class="image">
                                <img src="img/manicura-1.jpg" alt="manicura-1">
                            </div>
                            <div class="text">Estilo</div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
        <div class="row">
            <div class="col-12"></div>
        </div>
    </div>
{% endblock %}