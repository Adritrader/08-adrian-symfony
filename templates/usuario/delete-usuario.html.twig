{% extends 'back.html.twig' %}

{% block title %}Juan Bisquert | Peluqueria{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row justify-content-center">


        <!--MESSAGE

          <div class="alert alerta-login" role="alert">


          </div>

          -->


        <div class="card col-lg-4 col-md-6 mt-2">
            <div class="card-header">
                <h2>Perfil</h2>
            </div>
            <div class="col-lg-4 col-md-4">
                <img class="rounded w-100" src="{{asset(avatar_public_directory ~ usuario.avatar)}}" alt="poster">
            </div>
            <input type="hidden" name="id" value="{{  app.user.id }}">
            <h3 class="card-title mt-3 ml-5"><strong>Nombre:</strong> {{  usuario.nombre }}</h3>
            <hr>
            <h3 class="card-title ml-5"><strong>Apellidos:</strong> {{  usuario.apellidos }}</h3>
            <hr>
            <h3 class="card-title ml-5"><strong>Username:</strong> {{  usuario.username }}</h3>
            <hr>
            <h3 class="card-title ml-5"><strong>Email:</strong> {{  usuario.email }}</h3>
            <hr>
            <h3 class="card-title ml-5"><strong>Teléfono:</strong> {{  usuario.telefono }}</h3>

        </div>

        <div class="row justify-content-center">
            <div class="col-4 col-lg-4 col-md-6">

                <h2>¿Quieres borrar este usuario?</h2>

                <a href="{{ path('usuarios_destroy', {id: usuario.id}) }}"><button class="btn btn-danger">Si</button></a>
                <a href="{{ path('admin') }}"><button class="btn btn-primary">No</button></a>


            </div>
        </div>
    </div>
</div>
{% endblock %}