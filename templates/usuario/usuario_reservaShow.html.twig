{% extends 'base.html.twig' %}

{% block title %}Producto Show{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="col-6">
            <h2 class="mt-3 mb-5">Reserva Data</h2>
        </div>

        {% if reserva %}
            <div class="row justify-content-center">
                <div class="col-1" style="margin-top: -40px">
                    <a href="{{ path('reservas_show', {id: app.user.id}) }}"><button class="button-four bg-danger"><i class="fas fa-chevron-circle-left mx-1"></i>Atr√°s</button></a></div>



                <div class="card col-lg-4 col-md-4 mx-2 mt-5">
                    <div class="card-header mt-1 mb-1">
                        <h2>Reserva</h2>
                    </div>
                    <h3 class="card-title mt-3 ml-5"><strong>Username:</strong> {{reserva.usuario.username}}</h3>
                    <hr>
                    <h3 class="card-title mt-1 ml-5"><strong>Servicio:</strong> {{reserva.ServicioId.nombre}}</h3>
                    <hr>
                    <h3 class="card-title mt-1 ml-5"><strong>Hora:</strong> {{reserva.horaCita}}</h3>
                    <hr>
                    <h3 class="card-title mt-1 ml-5"><strong>Fecha:</strong> {{  reserva.fechaCita | date("Y-m-d") }}</h3>
                </div>
            </div>
        {% else %}
            <p>Reserva not found</p>
        {% endif %}

    </div>

{% endblock %}