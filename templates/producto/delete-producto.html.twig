{% extends 'back.html.twig' %}

{% block title %}Juan Bisquert | Peluqueria{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row justify-content-center">


            <!--MESSAGE

              <div class="alert alerta-login" role="alert">


              </div>

              -->


            <div class="card col-lg-3 col-md-6 py-5 mt-2">
                <div class="row justify-content-center">
                    <img class="rounded w-50 mt-3" src="{{ asset(pictures_public_directory ~  producto.imagen) }}" alt="poster"
                         height="200">
                </div>
                <hr>
                <h4 class="card-title mt-2"><strong>Nombre:</strong> {{ producto.nombre }}</h4>
                <hr>
                <h4 class="card-title mt-2"><strong>Categoria:</strong> {{ producto.categoria }}</h4>
                <hr>
                <h4 class="card-title mt-2"><strong>Descripcion:</strong> {{ producto.descripcion }}</h4>
                <hr>
                <h4 class="card-title mt-2"><strong>Precio:</strong> {{ producto.precio }} €</h4>

            </div>

            <div class="row justify-content-center">
                <div class="col-1"></div>
                <div class="col-3 col-lg-4 col-md-6">

                    <h2>¿Quieres borrar este producto?</h2>

                    <a href="{{ path('productos_destroy', {id: producto.id}) }}"><button class="btn btn-danger">Si</button></a>
                    <a href="{{ path('admin') }}"><button class="btn btn-primary">No</button></a>


                </div>
            </div>
        </div>
    </div>
{% endblock %}