{% extends 'back.html.twig' %}

{% block title %}BackOffice | Index {% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row fila-inputs-productos">
            <div class="col-2"></div>
            <div class="col-7 col-lg-7 col-sm-10 mr-4 bg-light" style="border: 2px solid black">
                <form method="get" action="productos/filter"
                      class="form-inline">
                    <div class="form-group">
                        <input name="text"
                               value=""
                               type="text" placeholder="Buscar" aria-label="Search">
                    </div>
                    <div class="form-check-inline ml-3">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="optradio" id="nombre" value="nombre">&nbsp;Nombre                        &nbsp;
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-inline">
                            <input class="form-check-input" type="radio" name="optradio" id="descripcion" value="descripcion">&nbsp;Descripcion                        &nbsp;
                        </label></div>
                    <div class="form-check-inline">
                        <label class="form-check-inline">
                            <input class="form-check-input" type="radio" name="optradio" id="both" value="both" checked>&nbsp;Ambos                        &nbsp;
                        </label>
                    </div>
                    <div class="form-group">
                        <button style="margin-top: 15px; margin-left: 0px" class="button-four" type="submit" name="botonFiltrar">Buscar</button>
                    </div>
                </form>
            </div>

        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">

                <div class="col-3 col-lg-6 ml-3">
                    <div>
                        <a style="text-decoration: none; color: white" class="btn" href="productos/create"><button class="button-four bg-dark">
                                <i class="fa fa-plus-circle">
                                </i> Añadir producto</button></a>
                    </div>
                </div>
            </div>
                <div class="container-fluid">
                    <div class="row justify-content-start">
                        <div class="col-3"></div>
                        <div class="col-lg-8 col-8">
                    <table>
                        <tr>
                            <th class="text-center">Imagen</th>
                            <th class="text-center">Nombre <a href="/movies?order=title&&tipo=ASC"><i
                                            class="fa fa-arrow-down"></i></a>
                                <a href="/movies?order=title&&tipo=DESC"><i
                                            class="fa fa-arrow-up"></i></a></th>
                            <th class="text-center">Categoría</th>
                            <th class="text-center">Descripción</th>
                            <th class="text-center">Precio</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        {% if productos %}
                            {% for producto in productos %}
                                <tr>
                                    <td class="text-center"><img src="{{ asset(pictures_public_directory ~  producto.imagen)}}" height="125" width="125"></td>
                                    <td class="text-center">{{producto.nombre}}</td>
                                    <td class="text-center">{{  producto.categoria }}</td>
                                    <td class="text-center">{{ producto.descripcion }}</td>
                                    <td class="text-center">{{ producto.precio}}</td>
                                    <td class="text-center" style="width: 140px"><a href="productos/edit/{{ producto.id }}">
                                            <button type="button" class="button-five my-1"><i class="fa fa-edit"></i> Editar</button>
                                        </a>
                                        <a href="productos/{{ producto.id }}">
                                            <button type="button" class="button-five my-1"><i class="fa fa-trash"></i> Borrar</button>
                                        </a>
                                        <a href="productos/show/{{ producto.id }}">
                                            <button type="button" class="button-five my-1"><i class="fa fa-eye"></i> Ver</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <h2>No hay productos disponibles</h2>
                        {% endif %}
                    </table>


                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}
