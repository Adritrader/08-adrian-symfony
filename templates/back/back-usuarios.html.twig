{% extends 'back.html.twig' %}

{% block title %}BackOffice | Usuarios {% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row fila-inputs-productos">
            <div class="col-2"></div>
            <div class="col-7 col-lg-7 col-sm-10 mr-4 bg-light" style="border: 2px solid black">
                <form method="get" action="usuarios/filter"
                      class="form-inline">
                    <div class="form-group">
                        <input name="text"
                               value=""
                               type="text" placeholder="Buscar" aria-label="Search">
                    </div>
                    <div class="form-check-inline ml-3">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="optradio" id="nombre" value="nombre">&nbsp;Username
                            &nbsp;
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-inline">
                            <input class="form-check-input" type="radio" name="optradio" id="role" value="rol">&nbsp;Rol
                            &nbsp;
                        </label></div>
                    <div class="form-check-inline">
                        <label class="form-check-inline">
                            <input class="form-check-input" type="radio" name="optradio" id="both" value="both" checked>&nbsp;Ambos
                            &nbsp;
                        </label>
                    </div>
                    <div class="form-group">
                        <button style="margin-top: 15px; margin-left: 0px" class="button-four" type="submit"
                                name="botonFiltrar">Buscar
                        </button>
                    </div>
                </form>
            </div>

        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-3 col-lg-6 ml-3">
                    <div><a style="text-decoration: none; color: white" class="btn" href="{{ path('usuarios_createBack') }}">
                            <button class="button-four bg-dark">
                                <i class="fa fa-plus-circle">
                                </i> AÃ±adir usuario
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row justify-content-start">
                    <div class="col-3"></div>
                    <div class="col-lg-8 col-8">
                        <table>
                            <tr>
                                <th class="text-center">Avatar</th>
                                <th class="text-center">Nombre</th>
                                <th class="text-center">Username</th>
                                <th class="text-center">Rol</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                            {% if usuarios %}
                                {% for usuario in usuarios %}
                                    <tr>
                                        <td class="text-center"><img
                                                    src="{{ asset(avatar_public_directory ~  usuario.avatar) }}"
                                                    height="125" width="125"></td>
                                        <td class="text-center">{{ usuario.nombre }}</td>
                                        <td class="text-center">{{ usuario.username }}</td>
                                        <td class="text-center">{{ usuario.role }}</td>
                                        <td class="text-center">{{ usuario.email }}</td>
                                        <td class="text-center" style="width: 140px"><a
                                                    href="usuarios/{{ usuario.id }}/edit">
                                                <button type="button" class="btn btn-warning my-1"><i class="fa fa-edit mx-1"></i>
                                                    Editar
                                                </button>
                                            </a>
                                            <a href="usuarios/{{ usuario.id }}/delete">
                                                <button type="button" class="btn btn-danger my-1"><i
                                                            class="fa fa-trash mx-1"></i> Borrar
                                                </button>
                                            </a>
                                            <a href="usuarios/{{ usuario.id }}/perfil">
                                                <button type="button" class="btn btn-info my-1 px-3"><i class="fa fa-eye mx-2"></i>Ver
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <h2>No hay usuarios disponibles</h2>
                            {% endif %}
                        </table>

                        <div class="container-fluid">
                            <div class="row justify-content-center">
                                <div class="col-1">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            {% for i in 1 .. paginas %}
                                                <li class="page-item" style="padding: 0px !important;"><a style="color: black" class="page-link active"
                                                                         href="/admin/usuarios?page={{i}}">{{i}}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </nav>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
